<p id="notice"><%= notice %></p>

<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <br>
    <div class="is title">Events</div>
      
      <% @events.each do |event| %>
        <div class="box">
          <article class="media">
            <div class="media-content">
              <div class="content">
                <p>
                  <p class="title is-5"><%=event.title%></p>
                  <p><%=event.description%></p>
                  <p> <%=event.location%></p>
                  <p><%=event.starts_time%></p>
                  <% unless event.creator.nil?%>
                    <p><%=event.creator.username%></p>
                  <% if user_signed_in?%>
                    <% unless event.creator.nil?%>
                      <p><%=event.creator.username%></p>
                    <%end%>
                    <% unless event.attendees.include?(current_user) %>
                      <%= link_to "RSVP", event, method: :rsvp, class:"button", data: { confirm: "Are you sure you want to attend this event?" } %>
                    <%else%>
                      <%=link_to "UN-RSVP", event, method: :unrsvp, class:"button", data: { confirm: "Are you sure you want to un-rsvp?" } %>
                    <%end%>
                  <%end%>
                <%end%>
                </p>
              </div>
            </div>
          </article>
        </div>
      <% end %>
    </div>
  </div>
</div>
