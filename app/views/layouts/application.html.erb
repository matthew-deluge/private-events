<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary is-light global-notification" >
        <p class="notice"> <%= notice %> </p>
      </div>
    <% end %>
      <% if flash[:alert] %>
        <div class="notification is-danger is-light global-notification" >
          <p class="alert"> <%= alert %> </p>
        </div>
      <% end %>

    <nav class="navbar is-link" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
         <%= link_to root_path, class:"navbar-item" do %>
          <h1 class="title is-4 has-text-white-ter">Private Events</h1>
        <% end %>

          <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
      </div>

      <div class="navbar-menu">
        <div class="navbar-start">
            <%= link_to events_path, class:"navbar-item" do %>
              <h1 class= "title is-5 has-text-white-ter">All Events</h1>
            <% end %>
            <%= link_to new_event_path, class:"navbar-item" do %>
              <h1 class="title is-5 has-text-white-ter">New Event</h1>
            <%end%>
        </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <a class="button is-primary">
                <strong>Sign Up</strong>
              </a>
              <a class="button is-light">
                Log In
              </a>
            </div>
          </div>
        </div>
      </div>
    </nav>



    <%= yield %>
  </body>
</html>
