<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary is-light global-notification" >
        <p class="notice"> <%= notice %> </p>
      </div>
    <% end %>
      <% if flash[:alert] %>
        <div class="notification is-danger is-light global-notification" >
          <p class="alert"> <%= alert %> </p>
        </div>
      <% end %>

    <nav class="navbar is-link" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
         <%= link_to root_path, class:"navbar-item" do %>
          <h1 class="title is-4 has-text-white-ter">Private Events</h1>
        <% end %>

          <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
      </div>

      <div class="navbar-menu">
        <div class="navbar-start">
            <%= link_to events_path, class:"navbar-item" do %>
              <h1 class= "title is-5 has-text-white-ter">All Events</h1>
            <% end %>
            <%= link_to new_event_path, class:"navbar-item" do %>
              <h1 class="title is-5 has-text-white-ter">New Event</h1>
            <%end%>
        </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <% if user_signed_in? %>
              <div class="buttons">
                <%= link_to current_user.username, edit_user_registration_path, class: "button"%>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"button"%>
              </div>
            <% else %>
              <div class="buttons">
                <%= link_to "Sign Up", new_user_registration_path, class:"button has-background-grey has-text-white-ter" %>
                <%= link_to "Log In", new_user_session_path, class:"button is-light" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </nav>



    <%= yield %>
  </body>

<footer class="footer has-background-white">
  <div class="content has-text-centered">
    <p>
      <strong>Members Only</strong> by <a href="https://github.com/matthew-deluge">Matthew_Deluge</a>.
    </p>
  </div>
</footer>
</html>
